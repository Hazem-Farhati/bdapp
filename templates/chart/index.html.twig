{% extends 'base.html.twig' %}

{% block title %}Chart index{% endblock %}

{% block body %}

{{ render_chart(chart) }}
    <h1>Chart index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Number</th>
                <th>Date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for chart in charts %}
            <tr>
                <td>{{ chart.id }}</td>
                <td>{{ chart.number }}</td>
                <td>{{ chart.date ? chart.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('chart_show', {'id': chart.id}) }}">show</a>
                    <a href="{{ path('chart_edit', {'id': chart.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('chart_new') }}">Create new</a>
{% endblock %}
